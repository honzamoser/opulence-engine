{
  "compilerOptions": {
    "types": ["@webgpu/types", "wgpu-matrix", "vite/client"],
    "target": "esnext",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "typeRoots": ["./node_modules/@types", "./src/generated"],
    "baseUrl": ".",
    "paths": {
      "@generated": ["generated/index"],
      "@generated/*": ["generated/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/generated/**/*",
    "generated/**/*",
    "game_src/**/*",
    "compiler/component_parsers.ts",
  ],
  
}