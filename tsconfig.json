{
  "compilerOptions": {
    "types": ["@webgpu/types", "wgpu-matrix", "vite/client"],
    "target": "esnext",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "typeRoots": ["./node_modules/@types", "./src/generated"]
  },
  "include": [
    "src/**/*",
    "src/generated/**/*"
  ]
}